  "version": "2.0.0",
  "tasks": [
    {
      "label": "venv:create",
      "detail": "Create the new virtual environment for Python",
      "type": "shell",
      "command": [
        "python3 -m venv .venv/",
      ]
    },
    {
      "label": "dependencies",
      "detail": "Install all necessary dependencies for Python",
      "type": "shell",
      "command": [
         "source .venv/bin/activate && pip install -r requirements.txt"
      ]
    }
  ]
}